---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;

const formattedDate = frontmatter.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <div class="breadcrumb">
          <a href="/">Home</a> / <a href="/blog">Blog</a> / {frontmatter.category}
        </div>
        
        <div class="meta">
          <span class="category">{frontmatter.category}</span>
          <time datetime={frontmatter.pubDate.toISOString()}>{formattedDate}</time>
        </div>
        
        <h1>{frontmatter.title}</h1>
        <p class="description">{frontmatter.description}</p>
        
        <div class="author-info">
          <div class="author-avatar">
            <svg width="40" height="40" viewBox="0 0 40 40">
              <circle cx="20" cy="20" r="20" fill="#2563eb"/>
              <text x="20" y="27" text-anchor="middle" fill="white" font-size="18" font-weight="bold">
                {frontmatter.author.charAt(0)}
              </text>
            </svg>
          </div>
          <div class="author-details">
            <span class="author-name">{frontmatter.author}</span>
            <span class="reading-time">5 min read</span>
          </div>
        </div>
      </header>
      
      {frontmatter.image && (
        <div class="featured-image-wrapper">
          <img src={frontmatter.image} alt={frontmatter.title} class="featured-image" />
        </div>
      )}
      
      <div class="content">
        <slot />
      </div>
      
      <div class="tags">
        <h3>Tags:</h3>
        <div class="tag-list">
          {frontmatter.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
      
      <div class="disclaimer">
        <strong>⚕️ Medical Disclaimer:</strong> This content is for informational purposes only and 
        should not be considered medical advice. Always consult with a qualified healthcare provider 
        for diagnosis, treatment, and medical concerns. Do not delay or disregard seeking professional 
        medical advice because of information you read here.
      </div>
      
      <div class="back-link">
        <a href="/blog">← Back to Blog</a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }
  
  .breadcrumb {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 1.5rem;
  }
  
  .breadcrumb a {
    color: #2563eb;
    text-decoration: none;
  }
  
  .breadcrumb a:hover {
    text-decoration: underline;
  }
  
  .post-header {
    margin-bottom: 3rem;
  }
  
  .meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .category {
    background: #2563eb;
    color: white;
    padding: 0.375rem 0.875rem;
    border-radius: 20px;
    font-size: 0.875rem;
    text-transform: capitalize;
    font-weight: 500;
  }
  
  time {
    color: #666;
    font-size: 0.875rem;
  }
  
  h1 {
    font-size: 2.75rem;
    color: #1a1a1a;
    margin-bottom: 1.25rem;
    line-height: 1.2;
    font-weight: 700;
  }
  
  .description {
    font-size: 1.25rem;
    color: #555;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .author-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    border-top: 1px solid #e5e7eb;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .author-details {
    display: flex;
    flex-direction: column;
  }
  
  .author-name {
    font-weight: 600;
    color: #1a1a1a;
  }
  
  .reading-time {
    font-size: 0.875rem;
    color: #666;
  }
  
  .featured-image-wrapper {
    margin-bottom: 3rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }
  
  .featured-image {
    width: 100%;
    height: 450px;
    object-fit: cover;
    display: block;
  }
  
  .content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #333;
  }
  
  .content :global(h2) {
    font-size: 2rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #1a1a1a;
    font-weight: 600;
  }
  
  .content :global(h3) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #1a1a1a;
    font-weight: 600;
  }
  
  .content :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .content :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .content :global(strong) {
    font-weight: 600;
    color: #1a1a1a;
  }
  
  .content :global(code) {
    background: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
  }
  
  .content :global(blockquote) {
    border-left: 4px solid #2563eb;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #555;
  }
  
  .tags {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }
  
  .tags h3 {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: #666;
    font-weight: 600;
  }
  
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }
  
  .tag {
    background: #f3f4f6;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
    color: #555;
  }
  
  .disclaimer {
    margin-top: 3rem;
    padding: 1.5rem;
    background: #fef3c7;
    border-left: 4px solid #f59e0b;
    border-radius: 8px;
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  .disclaimer strong {
    display: block;
    margin-bottom: 0.5rem;
    color: #92400e;
  }
  
  .back-link {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }
  
  .back-link a {
    color: #2563eb;
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .back-link a:hover {
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 2rem 1.5rem;
    }
    
    h1 {
      font-size: 2rem;
    }
    
    .description {
      font-size: 1.125rem;
    }
    
    .featured-image {
      height: 250px;
    }
    
    .content {
      font-size: 1rem;
    }
  }
</style>